<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="KeyboardButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="backgroundTint">#424242</item>
    </style>

    <style name="KeyboardButton.Function">
        <item name="android:textSize">12sp</item>
        <item name="backgroundTint">#303030</item>
    </style>

    <style name="KeyboardButton.Modifier">
        <item name="android:layout_columnSpan">2</item>
        <item name="backgroundTint">#1976D2</item>
        <item name="android:checkable">true</item>
        <item name="android:checked">false</item>
    </style>

    <style name="KeyboardButton.Special">
        <item name="android:layout_columnSpan">2</item>
        <item name="backgroundTint">#616161</item>
    </style>

    <style name="KeyboardButton.Space">
        <item name="android:layout_columnSpan">4</item>
    </style>
</resources> 